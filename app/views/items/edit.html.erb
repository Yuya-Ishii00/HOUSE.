<div class="row">
  <div class="col-xs-6">
    <%= form_for(@item) do |f| %>
      <h3>アイテムを編集する</h3>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group">
        <%= f.collection_select :category_id, Category.all, :id, :name, { selected: 8 }, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.text_field :comment, class: 'form-control', rows: 5 %>
      </div>
      <%= f.submit '編集する', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>