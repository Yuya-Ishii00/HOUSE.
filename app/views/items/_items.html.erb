<ul class="media-list">
  <% items.each do |item| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(item.user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to item.user.name, user_path(item.user) %> <span class="text-muted">posted at <%= item.created_at %></span>
        </div>
        <div>
          <p><%= item.category.name %>ï¼š<%= item.comment %></p>
        </div>
        <div>
          <% if current_user == item.user %>
            <%= link_to "Edit", edit_item_path(item), class: 'btn btn-warning btn-xs' %>
            <%= link_to "Delete", item, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate items %>
</ul>