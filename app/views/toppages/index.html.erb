<% if logged_in? %>
  <div class="row">
    <aside class="col-md-3">
      <h3>持っている服などのアイテムを登録しましょう。</h3>
      <%= form_for(@item) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <div class="form-group">
          <%= f.collection_select :category_id, Category.all, :id, :name, { selected: 8 }, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.text_field :comment, class: 'form-control', rows: 5 %>
        </div>
        <%= f.submit 'アイテムを登録する。', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-xs-8">
      <%= render 'items/items', items: @items %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>HOUSE.</h1>
      <%= link_to 'Sign Up!', signup_path, class: 'btn btn-warning btn-primary' %>
    </div>
  </div>
<% end %>